
public class Diamond {

	public static void main(String[] args) {
		
		int a = 2;
		double b = 3.14;
		double c = a + b;
		System.out.println(c);
		for(int i = 0; i < 9; i++)
		{
			for(int j = 0; j < 9; j++)
			{
				if(5 > Math.abs(j-i))
				{
					System.out.print('*');
				}
				else
				{
					System.out.print(' ');
				}
			}
			System.out.println();
		}
	}

}